<ChaosCastle Enable="1" MinPlayer="1">
	<Time StartIn="5" Duration="10" TownSpawn="1" />
	
	<EventSchedule>
		<Start Hour="1"  Minute="0" />
		<Start Hour="15" Minute="0" />
		<Start Hour="17" Minute="0" />
		<Start Hour="19" Minute="0" />
		<Start Hour="21" Minute="0" />
		<Start Hour="23" Minute="0" />
	</EventSchedule>
	
	<EntryLevel>
		<Castle Level="0" MinLevel="50"  MaxLevel="399" /> <!-- Chaos Castle 1 -->
		<Castle Level="1" MinLevel="400" MaxLevel="599" /> <!-- Chaos Castle 2 -->
		<Castle Level="2" MinLevel="600" MaxLevel="699" /> <!-- Chaos Castle 3 -->
		<Castle Level="3" MinLevel="700" MaxLevel="799" /> <!-- Chaos Castle 4 -->
		<Castle Level="4" MinLevel="800" MaxLevel="899" /> <!-- Chaos Castle 5 -->
		<Castle Level="5" MinLevel="900" MaxLevel="999" /> <!-- Chaos Castle 6 -->
		<Castle Level="6" MinLevel="1000" MaxLevel="MAX" /> <!-- Chaos Castle 7 -->
	</EntryLevel>

	<RewardExpSettings>
		<Castle Level="0" Multiplier="1.0" /> <!-- Chaos Castle 1 -->
		<Castle Level="1" Multiplier="1.0" /> <!-- Chaos Castle 2 -->
		<Castle Level="2" Multiplier="1.0" /> <!-- Chaos Castle 3 -->
		<Castle Level="3" Multiplier="1.0" /> <!-- Chaos Castle 4 -->
		<Castle Level="4" Multiplier="1.0" /> <!-- Chaos Castle 5 -->
		<Castle Level="5" Multiplier="1.0" /> <!-- Chaos Castle 6 -->
		<Castle Level="6" Multiplier="1.0" /> <!-- Chaos Castle 7 -->
	</RewardExpSettings>
</ChaosCastle>